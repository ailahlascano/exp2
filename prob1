#include <iostream>
#include <string>
using namespace std;

int main()
{
    string package;
    float hours, bill = 0.0;
    
    cout << "Enter package purchased (A-C. Please use capital letters): ";
    cin >> package;
    
    cout << "Enter hours used: ";
    cin >> hours;
    
    if (package == "A" && hours > 10)
        bill = 995 + ((hours - 10) * 20);
    else if (package == "A" && hours <= 10)
        bill = 995;
    else if (package == "B" && hours > 20)
        bill = 1495 + ((hours - 20) * 10);
    else if (package == "B" && hours <= 20)
        bill = 1495;
    else if (package == "C" && hours > 0)
        bill = 1995;
    else
        cout << "Cannot calculate monthly due. Please double check the information you have given.";
    
    cout << "Monthly due: P" << bill;
    
    return 0;
}
